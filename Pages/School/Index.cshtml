@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-dark">All Students</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-dark">Add New Student</a>
    </div>
</div>
<div class="col-12 border p-3 text-left" style="margin-top:15px;">

    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th>First name</th>
                <th>Last name</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/StudentList.js"></script>
}
