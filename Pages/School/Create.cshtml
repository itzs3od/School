@page
@model CreateModel
@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<h2 class="text-dark">Add New Student</h2>
<div class="border container" style="margin-top:15px;padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Student.FirstName">First name</label>
            </div>
            <div class="col-6">
                <input asp-for="Student.FirstName" class="form-control" />
            </div>
            <span asp-validation-for="Student.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Student.LastName">Last name</label>
            </div>
            <div class="col-6">
                <input asp-for="Student.LastName" class="form-control" />
            </div>
            <span asp-validation-for="Student.LastName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-danger form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}